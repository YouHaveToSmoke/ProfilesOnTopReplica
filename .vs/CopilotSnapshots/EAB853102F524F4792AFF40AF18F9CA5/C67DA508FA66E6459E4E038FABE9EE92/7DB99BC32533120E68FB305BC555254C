using System;
using System.Collections.Generic;
using System.Diagnostics;
using System.Drawing;
using System.Linq;
using System.Windows.Forms;
using OnTopReplica.WindowSeekers;

namespace OnTopReplica {
    
    /// <summary>
    /// Contains profile-related functionality of MainForm.
    /// </summary>
    partial class MainForm {
        
        /// <summary>
        /// Creates a profile region configuration from the current window state.
        /// </summary>
        private ProfileRegionConfiguration CreateRegionConfigurationFromCurrentState(string configName, RegionAnchor regionAnchor, bool scaleWithSource = false) {
            var config = new ProfileRegionConfiguration(configName);
            config.ScaleWithSourceWindow = scaleWithSource;
            
            // Region settings
            if (SelectedThumbnailRegion != null) {
                config.HasRegion = true;
                config.RegionIsRelative = SelectedThumbnailRegion.Relative;
                config.RegionAnchor = regionAnchor;

                var originalWindowSize = Size.Empty;
                if (_thumbnailPanel.IsShowingThumbnail) {
                    originalWindowSize = _thumbnailPanel.ThumbnailOriginalSize;
                }

                // Get the internal bounds based on the mode
                if (SelectedThumbnailRegion.Relative) {
                    // In relative mode, store as padding (Left, Top, Right, Bottom)
                    var padding = SelectedThumbnailRegion.BoundsAsPadding;
                    config.RegionBounds = new Rectangle(
                        padding.Left,
                        padding.Top,
                        padding.Right,
                        padding.Bottom
                    );
                }
                else {
                    // In absolute mode, store region relative to selected anchor
                    var bounds = SelectedThumbnailRegion.Bounds;

                    // Always store the absolute bounds for legacy compatibility
                    config.RegionBounds = bounds;

                    // Calculate relative values based on anchor point
                    if (originalWindowSize.Width > 0 && originalWindowSize.Height > 0) {
                        float relX, relY;

                        switch (regionAnchor) {
                            case RegionAnchor.TopLeft:
                                // From top-left: standard X, Y
                                relX = (float)bounds.X / originalWindowSize.Width;
                                relY = (float)bounds.Y / originalWindowSize.Height;
                                break;

                            case RegionAnchor.TopRight:
                                // From top-right: distance from right edge
                                relX = (float)(originalWindowSize.Width - bounds.X - bounds.Width) / originalWindowSize.Width;
                                relY = (float)bounds.Y / originalWindowSize.Height;
                                break;

                            case RegionAnchor.BottomLeft:
                                // From bottom-left: distance from bottom edge
                                relX = (float)bounds.X / originalWindowSize.Width;
                                relY = (float)(originalWindowSize.Height - bounds.Y - bounds.Height) / originalWindowSize.Height;
                                break;

                            case RegionAnchor.BottomRight:
                                // From bottom-right: distance from both edges
                                relX = (float)(originalWindowSize.Width - bounds.X - bounds.Width) / originalWindowSize.Width;
                                relY = (float)(originalWindowSize.Height - bounds.Y - bounds.Height) / originalWindowSize.Height;
                                break;

                            default:
                                relX = (float)bounds.X / originalWindowSize.Width;
                                relY = (float)bounds.Y / originalWindowSize.Height;
                                break;
                        }

                        config.RelativeRegionBounds = new RectangleF(
                            relX,
                            relY,
                            (float)bounds.Width / originalWindowSize.Width,
                            (float)bounds.Height / originalWindowSize.Height
                        );

                        Log.Write($"Saved region with {regionAnchor} anchor: rel({relX:F3}, {relY:F3}, {config.RelativeRegionBounds.Value.Width:F3}, {config.RelativeRegionBounds.Value.Height:F3})");
                    }
                }
            }
            else {
                config.HasRegion = false;
            }

            // Window position and size - store both absolute and relative
            config.WindowLocation = this.Location;
            config.WindowSize = this.Size;

            // Calculate relative position and size based on source window
            if (CurrentThumbnailWindowHandle != null) {
                try {
                    var sourceRect = Native.WindowMethods.GetWindowRectangle(CurrentThumbnailWindowHandle.Handle);

                    if (sourceRect.Width > 0 && sourceRect.Height > 0) {
                        // Calculate relative position (OnTopReplica window relative to source window)
                        float relX = (float)(this.Location.X - sourceRect.Left) / sourceRect.Width;
                        float relY = (float)(this.Location.Y - sourceRect.Top) / sourceRect.Height;
                        config.RelativeWindowLocation = new PointF(relX, relY);

                        // Calculate relative size (OnTopReplica window size relative to source window size)
                        float relWidth = (float)this.Width / sourceRect.Width;
                        float relHeight = (float)this.Height / sourceRect.Height;
                        config.RelativeWindowSize = new SizeF(relWidth, relHeight);

                        Log.Write($"Saved relative position: {relX:F3}, {relY:F3} and size: {relWidth:F3}, {relHeight:F3}");
                    }
                }
                catch (Exception ex) {
                    Log.WriteException("Error calculating relative position/size", ex);
                    // Fall back to absolute values only
                    config.RelativeWindowLocation = null;
                    config.RelativeWindowSize = null;
                }
            }

            // Visual settings
            config.Opacity = this.Opacity;
            config.ClickThrough = this.ClickThroughEnabled;
            config.ClickForwarding = this.ClickForwardingEnabled;
            config.ChromeVisible = this.IsChromeVisible;
            config.PositionLock = this.PositionLock;
            config.TopMost = this.TopMost;
            
            return config;
        }
        
        /// <summary>
        /// Creates a profile from the current window state.
        /// </summary>
        public Profile CreateProfileFromCurrentState(string profileName, string regionName, RegionAnchor regionAnchor, bool scaleWithSource = false) {
            var profile = new Profile(profileName);

            // Window information
            if (CurrentThumbnailWindowHandle != null) {
                profile.WindowHandle = (long)CurrentThumbnailWindowHandle.Handle;
                profile.WindowTitle = CurrentThumbnailWindowHandle.Title;
                profile.WindowClass = CurrentThumbnailWindowHandle.Class;

                // Store original window size for region transformation
                if (_thumbnailPanel.IsShowingThumbnail) {
                    profile.OriginalWindowSize = _thumbnailPanel.ThumbnailOriginalSize;
                }

                // Try to get process name
                try {
                    var process = Process.GetProcessById(
                        Native.WindowMethods.GetWindowProcessId(CurrentThumbnailWindowHandle.Handle));
                    profile.ProcessName = process.ProcessName;
                }
                catch {
                    profile.ProcessName = null;
                }
            }

            // Create and add the region configuration
            var config = CreateRegionConfigurationFromCurrentState(regionName, regionAnchor, scaleWithSource);
            profile.RegionConfigurations.Add(config);

            return profile;
        }
        
        /// <summary>
        /// Adds a new region configuration to an existing profile.
        /// </summary>
        public void AddRegionToProfile(Profile profile, string regionName, RegionAnchor regionAnchor, bool scaleWithSource = false) {
            if (profile == null) {
                throw new ArgumentNullException(nameof(profile));
            }

            // Update profile metadata
            profile.LastModified = DateTime.Now;

            // Store original window size if not already set
            if (profile.OriginalWindowSize == Size.Empty && _thumbnailPanel.IsShowingThumbnail) {
                profile.OriginalWindowSize = _thumbnailPanel.ThumbnailOriginalSize;
            }

            // Create and add the new configuration
            var config = CreateRegionConfigurationFromCurrentState(regionName, regionAnchor, scaleWithSource);
            profile.RegionConfigurations.Add(config);

            // Save the updated profile
            ProfileManager.SaveProfile(profile);
        }
        
        /// <summary>
        /// Applies a profile configuration to the current window.
        /// </summary>
        public void ApplyProfileConfiguration(Profile profile, ProfileRegionConfiguration config) {
            if (profile == null) {
                throw new ArgumentNullException(nameof(profile));
            }
            if (config == null) {
                throw new ArgumentNullException(nameof(config));
            }
            
            Log.Write($"Applying profile configuration: {profile.Name} - {config.Name}");
            
            // First, try to find and set the window
            WindowHandle handle = FindWindowForProfile(profile);
            
            if (handle == null) {
                Log.Write("Warning: Could not find window for profile " + profile.Name);
                MessageBox.Show(
                    $"Das Fenster für Profil '{profile.Name}' konnte nicht gefunden werden.\n\n" +
                    $"Prozess: {profile.ProcessName ?? "N/A"}\n" +
                    $"Klasse: {profile.WindowClass ?? "N/A"}\n" +
                    $"Titel: {profile.WindowTitle ?? "N/A"}",
                    "Fenster nicht gefunden",
                    MessageBoxButtons.OK,
                    MessageBoxIcon.Warning
                );
                return;
            }
            
            // Apply region if specified
            ThumbnailRegion region = null;
            if (config.HasRegion) {
                var currentWindowSize = Native.WindowMethods.GetWindowSize(handle.Handle);

                // Use relative bounds if available to scale with resolution changes
                if (config.RelativeRegionBounds.HasValue && currentWindowSize != Size.Empty && currentWindowSize.Width > 0 && currentWindowSize.Height > 0) {
                    var relBounds = config.RelativeRegionBounds.Value;
                    Rectangle bounds;

                    if (config.RegionIsRelative) {
                        // For relative mode (padding), scale padding values
                        int left = (int)(relBounds.X * currentWindowSize.Width);
                        int top = (int)(relBounds.Y * currentWindowSize.Height);
                        int right = (int)(relBounds.Width * currentWindowSize.Width);
                        int bottom = (int)(relBounds.Height * currentWindowSize.Height);

                        // Clamp to valid ranges
                        left = Math.Max(0, Math.Min(left, currentWindowSize.Width));
                        top = Math.Max(0, Math.Min(top, currentWindowSize.Height));
                        right = Math.Max(0, Math.Min(right, currentWindowSize.Width));
                        bottom = Math.Max(0, Math.Min(bottom, currentWindowSize.Height));

                        bounds = new Rectangle(left, top, right, bottom);
                        Log.Write($"Scaled relative region padding to {bounds}");
                    }
                    else {
                        // For absolute mode, calculate position based on anchor
                        int width = (int)(relBounds.Width * currentWindowSize.Width);
                        int height = (int)(relBounds.Height * currentWindowSize.Height);
                        int x, y;

                        // Ensure size stays within bounds
                        width = Math.Max(1, Math.Min(width, currentWindowSize.Width));
                        height = Math.Max(1, Math.Min(height, currentWindowSize.Height));

                        switch (config.RegionAnchor) {
                            case RegionAnchor.TopLeft:
                                // From top-left
                                x = (int)(relBounds.X * currentWindowSize.Width);
                                y = (int)(relBounds.Y * currentWindowSize.Height);
                                break;

                            case RegionAnchor.TopRight:
                                // From top-right: calculate from right edge
                                x = currentWindowSize.Width - (int)(relBounds.X * currentWindowSize.Width) - width;
                                y = (int)(relBounds.Y * currentWindowSize.Height);
                                break;

                            case RegionAnchor.BottomLeft:
                                // From bottom-left: calculate from bottom edge
                                x = (int)(relBounds.X * currentWindowSize.Width);
                                y = currentWindowSize.Height - (int)(relBounds.Y * currentWindowSize.Height) - height;
                                break;

                            case RegionAnchor.BottomRight:
                                // From bottom-right: calculate from both edges
                                x = currentWindowSize.Width - (int)(relBounds.X * currentWindowSize.Width) - width;
                                y = currentWindowSize.Height - (int)(relBounds.Y * currentWindowSize.Height) - height;
                                break;

                            default:
                                x = (int)(relBounds.X * currentWindowSize.Width);
                                y = (int)(relBounds.Y * currentWindowSize.Height);
                                break;
                        }

                        // Clamp position to valid range
                        x = Math.Max(0, Math.Min(x, currentWindowSize.Width - width));
                        y = Math.Max(0, Math.Min(y, currentWindowSize.Height - height));

                        bounds = new Rectangle(x, y, width, height);
                        Log.Write($"Scaled region with {config.RegionAnchor} anchor to {bounds}");
                    }

                    region = new ThumbnailRegion(bounds, config.RegionIsRelative);
                }
                else {
                    // Fallback: use absolute bounds with clamping (legacy or no relative values)
                    var bounds = config.RegionBounds;

                    if (currentWindowSize != Size.Empty && !config.RegionIsRelative) {
                        // Clamp to current window size
                        var clampedX = Math.Max(0, Math.Min(bounds.X, currentWindowSize.Width - 1));
                        var clampedY = Math.Max(0, Math.Min(bounds.Y, currentWindowSize.Height - 1));
                        var clampedWidth = Math.Min(bounds.Width, currentWindowSize.Width - clampedX);
                        var clampedHeight = Math.Min(bounds.Height, currentWindowSize.Height - clampedY);

                        bounds = new Rectangle(clampedX, clampedY, clampedWidth, clampedHeight);
                        Log.Write($"Using clamped absolute bounds: {bounds}");
                    }

                    region = new ThumbnailRegion(bounds, config.RegionIsRelative);
                }
            }
            
            // Set the thumbnail
            SetThumbnail(handle, region);

            // Apply window position and size
            this.StartPosition = FormStartPosition.Manual;

            // Use relative position/size if available, otherwise fall back to absolute
            if (config.RelativeWindowLocation.HasValue) {
                try {
                    var sourceRect = Native.WindowMethods.GetWindowRectangle(handle.Handle);

                    if (sourceRect.Width > 0 && sourceRect.Height > 0) {
                        // Calculate absolute position from relative values
                        int x = sourceRect.Left + (int)(config.RelativeWindowLocation.Value.X * sourceRect.Width);
                        int y = sourceRect.Top + (int)(config.RelativeWindowLocation.Value.Y * sourceRect.Height);

                        this.Location = new Point(x, y);

                        // Calculate absolute size from relative values ONLY if ScaleWithSourceWindow is true
                        if (config.ScaleWithSourceWindow && config.RelativeWindowSize.HasValue) {
                            int width = (int)(config.RelativeWindowSize.Value.Width * sourceRect.Width);
                            int height = (int)(config.RelativeWindowSize.Value.Height * sourceRect.Height);

                            // Ensure minimum size
                            width = Math.Max(this.MinimumSize.Width, width);
                            height = Math.Max(this.MinimumSize.Height, height);

                            this.Size = new Size(width, height);
                            Log.Write($"Applied scaled size: {width}x{height} (rel: {config.RelativeWindowSize.Value.Width:F3}, {config.RelativeWindowSize.Value.Height:F3})");
                        }
                        else {
                            // Use absolute size (no scaling)
                            this.Size = config.WindowSize;
                            Log.Write($"Applied absolute size: {config.WindowSize.Width}x{config.WindowSize.Height} (scaling disabled)");
                        }

                        Log.Write($"Applied relative position: {x}, {y} (rel: {config.RelativeWindowLocation.Value.X:F3}, {config.RelativeWindowLocation.Value.Y:F3})");
                    }
                    else {
                        // Fall back to absolute values
                        this.Location = config.WindowLocation;
                        this.Size = config.WindowSize;
                        Log.Write("Source window size invalid, using absolute position/size");
                    }
                }
                catch (Exception ex) {
                    Log.WriteException("Error calculating absolute position/size from relative values", ex);
                    // Fall back to absolute values
                    this.Location = config.WindowLocation;
                    this.Size = config.WindowSize;
                }
            }
            else {
                // Use absolute values (legacy behavior or no source window)
                this.Location = config.WindowLocation;
                this.Size = config.WindowSize;
                Log.Write("Using absolute position/size (no relative values available)");
            }

            // Apply visual settings
            this.Opacity = config.Opacity;
            this.ClickThroughEnabled = config.ClickThrough;
            this.ClickForwardingEnabled = config.ClickForwarding;
            this.IsChromeVisible = config.ChromeVisible;
            this.PositionLock = config.PositionLock;
            this.TopMost = config.TopMost;
            
            Log.Write("Profile configuration applied successfully: " + config.Name);
        }
        
        /// <summary>
        /// Finds the window handle for a given profile.
        /// </summary>
        private WindowHandle FindWindowForProfile(Profile profile) {
            WindowHandle handle = null;
            
            // Try by process name first (most reliable across restarts)
            if (!string.IsNullOrEmpty(profile.ProcessName)) {
                var processes = Process.GetProcessesByName(profile.ProcessName);
                if (processes.Length > 0) {
                    foreach (var proc in processes) {
                        if (proc.MainWindowHandle != IntPtr.Zero) {
                            handle = new WindowHandle(proc.MainWindowHandle);
                            
                            if (!string.IsNullOrEmpty(profile.WindowClass) && 
                                handle.Class != profile.WindowClass) {
                                continue;
                            }
                            
                            break;
                        }
                    }
                }
            }
            
            // Try by window class if process name didn't work
            if (handle == null && !string.IsNullOrEmpty(profile.WindowClass)) {
                var seeker = new ByClassWindowSeeker(profile.WindowClass) {
                    OwnerHandle = this.Handle,
                    SkipNotVisibleWindows = true
                };
                seeker.Refresh();
                handle = seeker.Windows.FirstOrDefault();
            }
            
            // Try by window title if we still don't have a match
            if (handle == null && !string.IsNullOrEmpty(profile.WindowTitle)) {
                var seeker = new ByTitleWindowSeeker(profile.WindowTitle) {
                    OwnerHandle = this.Handle,
                    SkipNotVisibleWindows = true
                };
                seeker.Refresh();
                handle = seeker.Windows.FirstOrDefault();
            }
            
            return handle;
        }
        
        /// <summary>
        /// Shows a dialog to save the current state as a profile.
        /// </summary>
        public void ShowSaveProfileDialog() {
            using (var dialog = new Forms.ProfileNameDialog()) {
                dialog.Text = "Profil speichern";
                dialog.PromptText = "Geben Sie einen Namen für das Profil ein:";
                
                if (dialog.ShowDialog(this) == DialogResult.OK) {
                    var profileName = dialog.ProfileName;
                    var regionAnchor = dialog.RegionAnchor;
                    
                    if (ProfileManager.ProfileExists(profileName)) {
                        // Profile exists - ask user what to do
                        var result = MessageBox.Show(
                            $"Ein Profil mit dem Namen '{profileName}' existiert bereits.\n\n" +
                            "Klicken Sie auf:\n" +
                            "• JA - um eine neue Region hinzuzufügen\n" +
                            "• NEIN - um das komplette Profil zu überschreiben\n" +
                            "• ABBRECHEN - um den Vorgang abzubrechen",
                            "Profil existiert bereits",
                            MessageBoxButtons.YesNoCancel,
                            MessageBoxIcon.Question
                        );

                        if (result == DialogResult.Cancel) {
                            return;
                        }
                        else if (result == DialogResult.Yes) {
                            // User wants to add a new region or update an existing one
                            try {
                                var existingProfile = ProfileManager.LoadProfile(profileName);

                                // Ask if user wants to add new or update existing
                                var addOrUpdate = MessageBox.Show(
                                    "Möchten Sie eine NEUE Region hinzufügen?\n\n" +
                                    "• JA - Neue Region hinzufügen\n" +
                                    "• NEIN - Existierende Region aktualisieren",
                                    "Region hinzufügen oder aktualisieren?",
                                    MessageBoxButtons.YesNoCancel,
                                    MessageBoxIcon.Question
                                );

                                if (addOrUpdate == DialogResult.Cancel) {
                                    return;
                                }
                                else if (addOrUpdate == DialogResult.Yes) {
                                    // Add new region
                                    using (var regionDialog = new Forms.AddRegionToProfileDialog()) {
                                        if (regionDialog.ShowDialog(this) == DialogResult.OK) {
                                            AddRegionToProfile(existingProfile, regionDialog.RegionName, regionDialog.RegionAnchor, regionDialog.ScaleWithSourceWindow);
                                            MessageBox.Show(
                                                $"Region '{regionDialog.RegionName}' wurde erfolgreich zum Profil '{profileName}' hinzugefügt.",
                                                "Region hinzugefügt",
                                                MessageBoxButtons.OK,
                                                MessageBoxIcon.Information
                                            );
                                        }
                                    }
                                }
                                else {
                                    // Update existing region
                                    if (existingProfile.RegionConfigurations.Count == 0) {
                                        MessageBox.Show(
                                            "Das Profil hat keine Regionen zum Aktualisieren.",
                                            "Keine Regionen",
                                            MessageBoxButtons.OK,
                                            MessageBoxIcon.Warning
                                        );
                                        return;
                                    }

                                    // Let user select which region to update
                                    using (var selectDialog = new Forms.ProfileRegionSelectionDialog(existingProfile)) {
                                        if (selectDialog.ShowDialog(this) == DialogResult.OK && selectDialog.SelectedConfiguration != null) {
                                            var configToUpdate = selectDialog.SelectedConfiguration;
                                            var updatedConfig = CreateRegionConfigurationFromCurrentState(configToUpdate.Name, configToUpdate.RegionAnchor, configToUpdate.ScaleWithSourceWindow);

                                            // Replace the old configuration
                                            var index = existingProfile.RegionConfigurations.IndexOf(configToUpdate);
                                            existingProfile.RegionConfigurations[index] = updatedConfig;
                                            existingProfile.LastModified = DateTime.Now;

                                            ProfileManager.SaveProfile(existingProfile);

                                            MessageBox.Show(
                                                $"Region '{configToUpdate.Name}' wurde erfolgreich aktualisiert.",
                                                "Region aktualisiert",
                                                MessageBoxButtons.OK,
                                                MessageBoxIcon.Information
                                            );
                                        }
                                    }
                                }
                            }
                            catch (Exception ex) {
                                MessageBox.Show(
                                    $"Fehler beim Bearbeiten des Profils:\n{ex.Message}",
                                    "Fehler",
                                    MessageBoxButtons.OK,
                                    MessageBoxIcon.Error
                                );
                                Log.WriteException("Error modifying profile", ex);
                            }
                            return;
                        }
                        // If No, continue to overwrite (falls through to code below)
                    }

                    // Create new profile or overwrite
                    try {
                        using (var regionDialog = new Forms.AddRegionToProfileDialog()) {
                            if (regionDialog.ShowDialog(this) == DialogResult.OK) {
                                var profile = CreateProfileFromCurrentState(profileName, regionDialog.RegionName, regionDialog.RegionAnchor, regionDialog.ScaleWithSourceWindow);
                                ProfileManager.SaveProfile(profile);
                                
                                MessageBox.Show(
                                    $"Profil '{profileName}' wurde erfolgreich gespeichert.",
                                    "Profil gespeichert",
                                    MessageBoxButtons.OK,
                                    MessageBoxIcon.Information
                                );
                            }
                        }
                    }
                    catch (Exception ex) {
                        MessageBox.Show(
                            $"Fehler beim Speichern des Profils:\n{ex.Message}",
                            "Fehler",
                            MessageBoxButtons.OK,
                            MessageBoxIcon.Error
                        );
                        Log.WriteException("Error saving profile", ex);
                    }
                }
            }
        }
        
        /// <summary>
        /// Shows a dialog to load a profile.
        /// </summary>
        public void ShowLoadProfileDialog() {
            using (var dialog = new Forms.ProfileSelectionDialog()) {
                if (dialog.ShowDialog(this) == DialogResult.OK) {
                    try {
                        var profile = ProfileManager.LoadProfile(dialog.SelectedProfileName);
                        
                        // Convert legacy format if needed
                        if (profile.IsLegacyFormat()) {
                            profile.ConvertFromLegacy();
                            ProfileManager.SaveProfile(profile);
                        }
                        
                        if (profile.RegionConfigurations.Count == 0) {
                            MessageBox.Show(
                                "Dieses Profil enthält keine Regionen.",
                                "Keine Regionen",
                                MessageBoxButtons.OK,
                                MessageBoxIcon.Warning
                            );
                            return;
                        }
                        
                        if (profile.RegionConfigurations.Count == 1) {
                            // Only one configuration, apply directly
                            ApplyProfileConfiguration(profile, profile.RegionConfigurations[0]);
                        }
                        else {
                            // Multiple configurations, show selection dialog
                            using (var regionDialog = new Forms.ProfileRegionSelectionDialog(profile)) {
                                if (regionDialog.ShowDialog(this) == DialogResult.OK) {
                                    if (regionDialog.LoadAll) {
                                        // Load all configurations (start new instances)
                                        LoadAllProfileConfigurations(profile);
                                    }
                                    else {
                                        // Load selected configuration
                                        ApplyProfileConfiguration(profile, regionDialog.SelectedConfiguration);
                                    }
                                }
                            }
                        }
                    }
                    catch (Exception ex) {
                        MessageBox.Show(
                            $"Fehler beim Laden des Profils:\n{ex.Message}",
                            "Fehler",
                            MessageBoxButtons.OK,
                            MessageBoxIcon.Error
                        );
                        Log.WriteException("Error loading profile", ex);
                    }
                }
            }
        }
        
        /// <summary>
        /// Loads all configurations from a profile by opening new MainForm windows.
        /// </summary>
        private void LoadAllProfileConfigurations(Profile profile) {
            // Apply first configuration to current instance
            ApplyProfileConfiguration(profile, profile.RegionConfigurations[0]);

            // Open new MainForm windows for remaining configurations
            for (int i = 1; i < profile.RegionConfigurations.Count; i++) {
                try {
                    var config = profile.RegionConfigurations[i];

                    // Create new MainForm window with default startup options
                    var newForm = new MainForm(StartupOptions.Factory.CreateOptions(new string[0]));

                    // Set window position and size before showing
                    newForm.StartPosition = FormStartPosition.Manual;
                    newForm.Location = config.WindowLocation;
                    newForm.Size = config.WindowSize;

                    // Apply the configuration after form is shown
                    newForm.Shown += (sender, e) => {
                        try {
                            var form = (MainForm)sender;
                            form.ApplyProfileConfiguration(profile, config);
                        }
                        catch (Exception ex) {
                            Log.WriteException($"Error applying configuration {config.Name}", ex);
                        }
                    };

                    // Show the new form
                    newForm.Show();
                }
                catch (Exception ex) {
                    Log.WriteException($"Error creating window for configuration {i}", ex);
                }
            }

            MessageBox.Show(
                $"Profil '{profile.Name}' wurde geladen.\n" +
                $"{profile.RegionConfigurations.Count} Fenster wurden geöffnet.",
                "Profil geladen",
                MessageBoxButtons.OK,
                MessageBoxIcon.Information
            );
        }
        
        /// <summary>
        /// Shows a dialog to manage profiles.
        /// </summary>
        public void ShowManageProfilesDialog() {
            using (var dialog = new Forms.ProfileManagerDialog()) {
                dialog.ShowDialog(this);
            }
        }

        /// <summary>
        /// Shows a dialog to save all open OnTopReplica instances as a profile.
        /// </summary>
        public void ShowSaveAllInstancesDialog() {
            // Find all open MainForm instances
            var allInstances = GetAllMainFormInstances().ToList();

            if (allInstances.Count == 0) {
                MessageBox.Show(
                    "Es sind keine OnTopReplica-Fenster geöffnet.",
                    "Keine Fenster",
                    MessageBoxButtons.OK,
                    MessageBoxIcon.Information
                );
                return;
            }

            if (allInstances.Count == 1) {
                var result = MessageBox.Show(
                    "Es ist nur ein OnTopReplica-Fenster geöffnet.\n\n" +
                    "Möchten Sie stattdessen nur das aktuelle Fenster speichern?",
                    "Nur ein Fenster",
                    MessageBoxButtons.YesNo,
                    MessageBoxIcon.Question
                );

                if (result == DialogResult.Yes) {
                    ShowSaveProfileDialog();
                }
                return;
            }

            using (var dialog = new Forms.SaveAllInstancesDialog(allInstances)) {
                if (dialog.ShowDialog(this) == DialogResult.OK) {
                    try {
                        var profileName = dialog.ProfileName;

                        // Check if profile already exists
                        if (ProfileManager.ProfileExists(profileName)) {
                            var result = MessageBox.Show(
                                $"Ein Profil mit dem Namen '{profileName}' existiert bereits.\n\n" +
                                "Möchten Sie es überschreiben?",
                                "Profil existiert bereits",
                                MessageBoxButtons.YesNo,
                                MessageBoxIcon.Question
                            );

                            if (result != DialogResult.Yes) {
                                return;
                            }
                        }

                        // Create profile with all instances
                        var profile = CreateProfileFromAllInstances(profileName, dialog.InstanceConfigurations);
                        ProfileManager.SaveProfile(profile);

                        MessageBox.Show(
                            $"Profil '{profileName}' wurde erfolgreich gespeichert.\n" +
                            $"{dialog.InstanceConfigurations.Count} Fenster wurden gespeichert.",
                            "Profil gespeichert",
                            MessageBoxButtons.OK,
                            MessageBoxIcon.Information
                        );
                    }
                    catch (Exception ex) {
                        MessageBox.Show(
                            $"Fehler beim Speichern des Profils:\n{ex.Message}",
                            "Fehler",
                            MessageBoxButtons.OK,
                            MessageBoxIcon.Error
                        );
                        Log.WriteException("Error saving all instances profile", ex);
                    }
                }
            }
        }

        /// <summary>
        /// Gets all open MainForm instances.
        /// </summary>
        private IEnumerable<MainForm> GetAllMainFormInstances() {
            foreach (Form form in Application.OpenForms) {
                if (form is MainForm mainForm && mainForm.IsShowingThumbnail) {
                    yield return mainForm;
                }
            }
        }

        /// <summary>
        /// Creates a profile from all instances.
        /// </summary>
        private Profile CreateProfileFromAllInstances(string profileName, IReadOnlyList<Forms.SaveAllInstancesDialog.InstanceConfiguration> configs) {
            var profile = new Profile {
                Name = profileName,
                CreatedDate = DateTime.Now,
                LastModified = DateTime.Now
            };

            // Use first instance for window information
            var firstConfig = configs.First();
            if (firstConfig.Instance.CurrentThumbnailWindowHandle != null) {
                profile.WindowHandle = (long)firstConfig.Instance.CurrentThumbnailWindowHandle.Handle;
                profile.WindowTitle = firstConfig.Instance.CurrentThumbnailWindowHandle.Title;
                profile.WindowClass = firstConfig.Instance.CurrentThumbnailWindowHandle.Class;

                if (firstConfig.Instance.IsShowingThumbnail) {
                    profile.OriginalWindowSize = firstConfig.Instance.ThumbnailPanel.ThumbnailOriginalSize;
                }

                try {
                    var process = Process.GetProcessById(
                        Native.WindowMethods.GetWindowProcessId(firstConfig.Instance.CurrentThumbnailWindowHandle.Handle));
                    profile.ProcessName = process.ProcessName;
                }
                catch {
                    profile.ProcessName = null;
                }
            }

            // Create configurations for each instance
            foreach (var config in configs) {
                var regionConfig = CreateRegionConfigurationFromInstance(
                    config.Instance, 
                    config.RegionName, 
                    config.RegionAnchor,
                    config.ScaleWithSourceWindow
                );
                profile.RegionConfigurations.Add(regionConfig);
            }

            return profile;
        }

        /// <summary>
        /// Creates a region configuration from a specific MainForm instance.
        /// </summary>
        private ProfileRegionConfiguration CreateRegionConfigurationFromInstance(MainForm instance, string configName, RegionAnchor regionAnchor, bool scaleWithSource = false) {
            var config = new ProfileRegionConfiguration(configName);
            config.ScaleWithSourceWindow = scaleWithSource;

            // Region settings
            if (instance.SelectedThumbnailRegion != null) {
                config.HasRegion = true;
                config.RegionIsRelative = instance.SelectedThumbnailRegion.Relative;
                config.RegionAnchor = regionAnchor;

                var originalWindowSize = Size.Empty;
                if (instance.ThumbnailPanel.IsShowingThumbnail) {
                    originalWindowSize = instance.ThumbnailPanel.ThumbnailOriginalSize;
                }

                if (instance.SelectedThumbnailRegion.Relative) {
                    var padding = instance.SelectedThumbnailRegion.BoundsAsPadding;
                    config.RegionBounds = new Rectangle(
                        padding.Left,
                        padding.Top,
                        padding.Right,
                        padding.Bottom
                    );
                }
                else {
                    // In absolute mode, store region relative to selected anchor
                    var bounds = instance.SelectedThumbnailRegion.Bounds;

                    // Always store the absolute bounds for legacy compatibility
                    config.RegionBounds = bounds;

                    // Calculate relative values based on anchor point
                    if (originalWindowSize.Width > 0 && originalWindowSize.Height > 0) {
                        float relX, relY;

                        switch (regionAnchor) {
                            case RegionAnchor.TopLeft:
                                relX = (float)bounds.X / originalWindowSize.Width;
                                relY = (float)bounds.Y / originalWindowSize.Height;
                                break;

                            case RegionAnchor.TopRight:
                                relX = (float)(originalWindowSize.Width - bounds.X - bounds.Width) / originalWindowSize.Width;
                                relY = (float)bounds.Y / originalWindowSize.Height;
                                break;

                            case RegionAnchor.BottomLeft:
                                relX = (float)bounds.X / originalWindowSize.Width;
                                relY = (float)(originalWindowSize.Height - bounds.Y - bounds.Height) / originalWindowSize.Height;
                                break;

                            case RegionAnchor.BottomRight:
                                relX = (float)(originalWindowSize.Width - bounds.X - bounds.Width) / originalWindowSize.Width;
                                relY = (float)(originalWindowSize.Height - bounds.Y - bounds.Height) / originalWindowSize.Height;
                                break;

                            default:
                                relX = (float)bounds.X / originalWindowSize.Width;
                                relY = (float)bounds.Y / originalWindowSize.Height;
                                break;
                        }

                        config.RelativeRegionBounds = new RectangleF(
                            relX,
                            relY,
                            (float)bounds.Width / originalWindowSize.Width,
                            (float)bounds.Height / originalWindowSize.Height
                        );
                    }
                }
            }
            else {
                config.HasRegion = false;
            }

            // Window position and size - store both absolute and relative
            config.WindowLocation = instance.Location;
            config.WindowSize = instance.Size;

            // Calculate relative position and size based on source window
            if (instance.CurrentThumbnailWindowHandle != null) {
                try {
                    var sourceRect = Native.WindowMethods.GetWindowRectangle(instance.CurrentThumbnailWindowHandle.Handle);

                    if (sourceRect.Width > 0 && sourceRect.Height > 0) {
                        // Calculate relative position
                        float relX = (float)(instance.Location.X - sourceRect.Left) / sourceRect.Width;
                        float relY = (float)(instance.Location.Y - sourceRect.Top) / sourceRect.Height;
                        config.RelativeWindowLocation = new PointF(relX, relY);

                        // Calculate relative size
                        float relWidth = (float)instance.Width / sourceRect.Width;
                        float relHeight = (float)instance.Height / sourceRect.Height;
                        config.RelativeWindowSize = new SizeF(relWidth, relHeight);
                    }
                }
                catch (Exception ex) {
                    Log.WriteException("Error calculating relative position/size for instance", ex);
                    config.RelativeWindowLocation = null;
                    config.RelativeWindowSize = null;
                }
            }

            // Visual settings
            config.Opacity = instance.Opacity;
            config.ClickThrough = instance.ClickThroughEnabled;
            config.ClickForwarding = instance.ClickForwardingEnabled;
            config.ChromeVisible = instance.IsChromeVisible;
            config.PositionLock = instance.PositionLock;
            config.TopMost = instance.TopMost;

            return config;
        }

        /// <summary>
        /// Shows a dialog to add the current region to an existing profile.
        /// </summary>
        public void ShowAddRegionToExistingProfileDialog() {
            using (var dialog = new Forms.AddRegionToExistingProfileDialog()) {
                if (dialog.ShowDialog(this) == DialogResult.OK) {
                    try {
                        var profile = ProfileManager.LoadProfile(dialog.SelectedProfileName);
                        AddRegionToProfile(profile, dialog.RegionName, dialog.RegionAnchor, dialog.ScaleWithSourceWindow);

                        MessageBox.Show(
                            $"Region '{dialog.RegionName}' wurde erfolgreich zum Profil '{dialog.SelectedProfileName}' hinzugefügt.",
                            "Region hinzugefügt",
                            MessageBoxButtons.OK,
                            MessageBoxIcon.Information
                        );
                    }
                    catch (Exception ex) {
                        MessageBox.Show(
                            $"Fehler beim Hinzufügen der Region:\n{ex.Message}",
                            "Fehler",
                            MessageBoxButtons.OK,
                            MessageBoxIcon.Error
                        );
                        Log.WriteException("Error adding region to existing profile", ex);
                    }
                }
            }
        }
    }
}
