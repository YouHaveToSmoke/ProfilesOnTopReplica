using System;
using System.Windows.Forms;

namespace OnTopReplica.Forms {
    
    public class ProfileNameDialog : Form {

        private Label lblPrompt;
        private TextBox txtProfileName;
        private CheckBox chkAnchorBottomRight;
        private CheckBox chkScaleWithSource;
        private Button btnOK;
        private Button btnCancel;

        public string ProfileName => txtProfileName.Text.Trim();

        public RegionAnchor RegionAnchor => chkAnchorBottomRight.Checked 
            ? RegionAnchor.BottomRight 
            : RegionAnchor.TopLeft;

        public bool ScaleWithSourceWindow => chkScaleWithSource.Checked;

        public string PromptText {
            get => lblPrompt.Text;
            set => lblPrompt.Text = value;
        }
        
        public ProfileNameDialog() {
            InitializeComponent();
        }
        
        private void InitializeComponent() {
            this.lblPrompt = new System.Windows.Forms.Label();
            this.txtProfileName = new System.Windows.Forms.TextBox();
            this.chkAnchorBottomRight = new System.Windows.Forms.CheckBox();
            this.btnOK = new System.Windows.Forms.Button();
            this.btnCancel = new System.Windows.Forms.Button();
            this.SuspendLayout();
            // 
            // lblPrompt
            // 
            this.lblPrompt.AutoSize = true;
            this.lblPrompt.Location = new System.Drawing.Point(12, 15);
            this.lblPrompt.Name = "lblPrompt";
            this.lblPrompt.Size = new System.Drawing.Size(59, 13);
            this.lblPrompt.TabIndex = 4;
            this.lblPrompt.Text = "Profilname:";
            // 
            // txtProfileName
            // 
            this.txtProfileName.Location = new System.Drawing.Point(12, 35);
            this.txtProfileName.Name = "txtProfileName";
            this.txtProfileName.Size = new System.Drawing.Size(360, 20);
            this.txtProfileName.TabIndex = 0;
            // 
            // chkAnchorBottomRight
            // 
            this.chkAnchorBottomRight.AutoSize = true;
            this.chkAnchorBottomRight.Location = new System.Drawing.Point(12, 65);
            this.chkAnchorBottomRight.Name = "chkAnchorBottomRight";
            this.chkAnchorBottomRight.Size = new System.Drawing.Size(506, 17);
            this.chkAnchorBottomRight.TabIndex = 1;
            this.chkAnchorBottomRight.Text = "Region von rechts unten verankern (für UI-Elemente die sich an der rechten untere" +
    "n Ecke orientieren)";
            this.chkAnchorBottomRight.UseVisualStyleBackColor = true;
            this.chkAnchorBottomRight.CheckedChanged += new System.EventHandler(this.chkAnchorBottomRight_CheckedChanged);
            // 
            // btnOK
            // 
            this.btnOK.Location = new System.Drawing.Point(216, 95);
            this.btnOK.Name = "btnOK";
            this.btnOK.Size = new System.Drawing.Size(75, 23);
            this.btnOK.TabIndex = 2;
            this.btnOK.Text = "OK";
            this.btnOK.UseVisualStyleBackColor = true;
            this.btnOK.Click += new System.EventHandler(this.BtnOK_Click);
            // 
            // btnCancel
            // 
            this.btnCancel.DialogResult = System.Windows.Forms.DialogResult.Cancel;
            this.btnCancel.Location = new System.Drawing.Point(297, 95);
            this.btnCancel.Name = "btnCancel";
            this.btnCancel.Size = new System.Drawing.Size(75, 23);
            this.btnCancel.TabIndex = 3;
            this.btnCancel.Text = "Abbrechen";
            this.btnCancel.UseVisualStyleBackColor = true;
            // 
            // ProfileNameDialog
            // 
            this.AcceptButton = this.btnOK;
            this.CancelButton = this.btnCancel;
            this.ClientSize = new System.Drawing.Size(384, 130);
            this.Controls.Add(this.btnCancel);
            this.Controls.Add(this.btnOK);
            this.Controls.Add(this.chkAnchorBottomRight);
            this.Controls.Add(this.txtProfileName);
            this.Controls.Add(this.lblPrompt);
            this.FormBorderStyle = System.Windows.Forms.FormBorderStyle.FixedDialog;
